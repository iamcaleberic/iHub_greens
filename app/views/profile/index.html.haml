=render 'layouts/header'
.ui.segment
	%h3.ui.header#special { Consultants }
	.ui.link.cards
		- @green.each do |green|

			.ui.card
				.image
				-if green.avatar.nil?
				-else 
					= image_tag green.avatar.url(:medium)
				.content
					.header 
						= green.name
					.meta
						%a 
						= green.email
					.description
						=green.skills
				.extra.content
					%span.right.floated
						= green.contact
					%span
					%p
						=green.startups.name

				.extra.content
				%span
				
