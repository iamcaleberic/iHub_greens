= form_for @message do |f|
  - if @message.errors.any?
    #error_explanation
      %h2= "#{pluralize(@message.errors.count, "error")} prohibited this message from being saved:"
      %ul
        - @message.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :body
    = f.text_area :body
  .field
    = f.label :read
    = f.hidden_field :read
  .field
    = f.select :recipient_name 
  .field
    = f.label :green
    = f.text_field :green
  .actions
    = f.submit 'Save'
