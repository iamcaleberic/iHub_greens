= render 'layouts/header'
.ui.basic.segment
  .ui.centered.card
    .image
    -if @startup.avatar.nil?
      = image_tag("icon-green.png")
    -else
      = image_tag @startup.avatar.url(:medium)
    .content
      .header 
        = @startup.name
      .meta
        %a 
          = @startup.web
      .description
        =@startup.description
    .extra.content
      %span.right.floated
        - if @startup.date_founded.nil?
        - else
          = @startup.date_founded.readable_inspect()
      %span
        %p
          = @startup.category
    .extra.content
      %span 
        
        = @startup.founders

    .extra.content
      %span
        -if admin_signed_in?
          = link_to 'Edit', edit_startup_path(@startup)
          \|
        = link_to 'Back', startups_path

