= render 'layouts/header'

.ui.segment
  %h3.ui.header#special  { startups }
  .ui.link.cards
    - @startups.each do |startup|

      .ui.card
        .image
          %img{:src => "/assets/icon-green.png" , :style => "width:auto;height:auto;"}
        .content
          .header 
            = startup.name
          .meta
            %a 
              = startup.location
          .description
            =startup.description
        .extra.content
          %span.right.floated
            = startup.date_founded
          %span
            %p
              = startup.category 
        .extra.content
          %span
            -if admin_signed_in?
              = link_to 'Show', startup
              = link_to 'Edit', edit_startup_path(startup)
              = link_to 'Destroy', startup, :method => :delete, :data => { :confirm => 'Are you sure?' }

