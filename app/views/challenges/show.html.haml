= render'layouts/header'
.ui.segment
  %p#notice= notice
  .ui.fluid.card
    .image
      %img{:src => "/assets/imac.jpg"}
    .content
      .header 
        =@challenge.title
      .meta
        %a 
          =@challenge.organization
      .description
        =@challenge.description
    .extra.content
      %span.right.floated
        = @challenge.timeline
      %span
        %p
          =@challenge.reward 
    .extra.content
      %span
        -if admin_signed_in?
          = link_to 'Edit', edit_challenge_path(@challenge)
          \|
          = link_to 'Back', challenges_path

