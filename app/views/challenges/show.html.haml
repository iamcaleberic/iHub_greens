= render'layouts/header'
.ui.basicsegment
  %p#notice= notice
  .ui.centered.card
    .image
    -if @challenge.avatar.nil?
    -else
      = image_tag @challenge.avatar.url(:thumb)
    .content
      .header 
        =@challenge.title
      .meta
        %a 
          =@challenge.organization
      .description
        =@challenge.description
    .extra.content
      %span.right.floated
        = @challenge.timeline
      %span
        %p
          =@challenge.reward 
    .extra.content
      %span
        -if admin_signed_in?
          = link_to 'Edit', edit_challenge_path(@challenge)
          \|
        = link_to 'Back', challenges_path

