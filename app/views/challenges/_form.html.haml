.ui.basic.form.segment
  %center
    .column#form
      = form_for @challenge do |f|
        - if @challenge.errors.any?
          #error_explanation
            %h2= "#{pluralize(@challenge.errors.count, "error")} prohibited this challenge from being saved:"
            %ul
              - @challenge.errors.full_messages.each do |msg|
                %li= msg

        .field
          = f.label :title
          = f.text_field :title
        .field
          = f.label :image
          = f.file_field :avatar
        .field
          = f.label :description
          = f.text_field :description
        .field
          = f.label :organization
          = f.text_field :organization
        .inline.field
          = f.label :timeline
          = f.date_select :timeline
        .field
          = f.label :reward
          = f.text_field :reward
        .actions
          = f.submit 'Save' , :class => "ui green button"
